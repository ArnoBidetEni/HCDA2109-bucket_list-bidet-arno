<style>
  .flash-container{
    position : fixed;
    bottom : 1rem;
    right : 1rem;
    display:flex;
    flex-direction : column;
  }
  .flash{
    padding : 1rem;
    border-radius:0.5rem;
    background-color : white;
    color : black;
  }
</style>

<div class="flash-container">
  {% for message in app.flashes('success') %}
  <div class="flash" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-body">
        {{ message }}
    </div>
  </div>
  {% endfor %}
</div>